{% set assetsUrl = editorData.urls.assets %}
{% set serverTimestamp = editorData.serverTimestamp %}
{% set meta = page.meta %}
{% set blocks = page.blocks %}
{% spaceless %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{ meta.title }}</title>
    <meta name="description" content="{{ meta.description }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="{{ assetsUrl }}/editor/css/preview.css" rel="stylesheet">

    {{ blocks.head | raw }}
  </head>
  <body class="brz">
    {{ blocks.body | raw }}

    <script src="https://cdn.polyfill.io/v2/polyfill.js?features=IntersectionObserver,IntersectionObserverEntry"></script>

    <script>
      var __CONFIG__ = {
        serverTimestamp: {{ serverTimestamp }}
      };
    </script>

    <script src="{{ assetsUrl }}/editor/js/preview.js"></script>

  {% for script in scriptTags %}
    <script src="{{ script.src }}"></script>
  {% endfor %}
  </body>
</html>
{% endspaceless %}
